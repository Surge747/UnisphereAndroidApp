<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinnerUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="243dp"
            android:layout_height="261dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/sharp_account_circle_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerUsers" />

        <TextView
            android:id="@+id/Profile_Username"
            android:layout_width="165dp"
            android:layout_height="31dp"
            android:layout_marginTop="19dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/Profile_Course1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="49dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/Profile_Course2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Profile_Username" />

        <TextView
            android:id="@+id/Profile_Course2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="123dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Profile_Course1"
            app:layout_constraintTop_toBottomOf="@+id/Profile_Username" />

        <TextView
            android:id="@+id/Profile_Course3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="49dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/Profile_Course4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Profile_Course1" />

        <TextView
            android:id="@+id/Profile_Course4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="123dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Profile_Course3"
            app:layout_constraintTop_toBottomOf="@+id/Profile_Course2" />

        <Button
            android:id="@+id/Profile_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="49dp"
            android:text="Message"
            app:layout_constraintEnd_toStartOf="@+id/Profile_block"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Profile_Course3" />

        <Button
            android:id="@+id/Profile_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="90dp"
            android:text="Block"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Profile_message"
            app:layout_constraintTop_toBottomOf="@+id/Profile_Course4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
